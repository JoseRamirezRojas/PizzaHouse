<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraint1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="74dp"
                android:layout_height="53dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:text="Rebanada \n $15"
                android:textAlignment="center"
                android:textColor="#FF5722"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:text="Familiar \n $90"
                android:textAlignment="center"
                android:textColor="#FF5722"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:text="Pepperoni"
                android:textAlignment="center"
                android:textColor="#FF5722"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="112dp"
                android:layout_height="132dp"
                android:src="@drawable/pepp" />

            <com.ciencias.tarea2.ThemedNumberPicker
                android:id="@+id/numberpicker_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alpha="0.9"
                android:clickable="true"
                tools:visibility="visible" />

            <com.ciencias.tarea2.ThemedNumberPicker
                android:id="@+id/numberpicker_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:visibility="visible" />
            <!--<Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:translationX="-22dp" />

            <Switch
                android:id="@+id/switch3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:translationX="-22dp" /> -->

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hawaiana"
                android:textAlignment="center"
                android:textColor="#FF5722"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="186dp"
                android:layout_height="143dp"
                android:src="@drawable/hawa" />

            <com.ciencias.tarea2.ThemedNumberPicker
                android:id="@+id/numberpicker_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:visibility="visible" />

            <com.ciencias.tarea2.ThemedNumberPicker
                android:id="@+id/numberpicker_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:visibility="visible" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetariana"
                android:textAlignment="center"
                android:textColor="#FF5722"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:src="@drawable/veget" />

            <com.ciencias.tarea2.ThemedNumberPicker
                android:id="@+id/numberpicker_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:visibility="visible" />

            <com.ciencias.tarea2.ThemedNumberPicker
                android:id="@+id/numberpicker_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:visibility="visible" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button_first"
        android:layout_width="105dp"
        android:layout_height="51dp"
        android:text="ORDENA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.856"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

</androidx.constraintlayout.widget.ConstraintLayout>